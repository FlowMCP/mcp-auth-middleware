{
    "name": "mcp-auth-middleware",
    "version": "0.1.0",
    "description": "Multi-realm OAuth 2.1 authentication middleware for MCP servers with Auth0 and Keycloak support",
    "main": "./src/index.mjs",
    "type": "module",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
        "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
        "test:performance": "NODE_OPTIONS='--experimental-vm-modules' jest tests/performance",
        "test:coverage:src": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --collectCoverageFrom='src/**/*.mjs'",
        "test:file": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "start:demo": "node tests/manual/1-reference-implementation.mjs"
    },
    "keywords": [
        "oauth",
        "oauth2.1",
        "mcp",
        "model-context-protocol",
        "keycloak",
        "middleware",
        "authentication",
        "authorization"
    ],
    "author": "FlowMCP",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/flowmcp/oauth-middleware.git"
    },
    "dependencies": {
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "jwks-client": "^2.0.5",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "flowmcpServers": "github:flowmcp/flowMCP-servers#04ec25b8aa32363035afdae1da2e5a976c425f6f",
        "jest": "^29.7.0",
        "schemaimporter": "github:flowmcp/flowMCP-schemas#3969e3b2ddae3d5d3d1c8bb8d4131b00d854af4d",
        "supertest": "^7.1.4"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "testMatch": [
            "**/tests/unit/**/*.test.js",
            "**/tests/integration/**/*.test.js",
            "**/tests/performance/**/*.test.js"
        ]
    }
}
