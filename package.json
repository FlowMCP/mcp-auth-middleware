{
    "name": "mcp-auth-middleware",
    "version": "1.1.0",
    "description": "OAuth 2.1 authentication middleware for MCP servers with Auth0 and static Bearer token support",
    "main": "./src/index.mjs",
    "type": "module",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
        "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
        "test:performance": "NODE_OPTIONS='--experimental-vm-modules' jest tests/performance",
        "test:coverage:src": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --collectCoverageFrom='src/**/*.mjs'",
        "test:file": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:local:free": "node tests/manual/2-reference-dynamic-implmentation.mjs --routeType=free-route",
        "test:local:bearer": "node tests/manual/2-reference-dynamic-implmentation.mjs --routeType=static-bearer",
        "test:local:oauth": "node tests/manual/2-reference-dynamic-implmentation.mjs --routeType=oauth",
        "test:remote:free": "node tests/manual/3-remote-test.mjs --routeType=free-route",
        "test:remote:bearer": "node tests/manual/3-remote-test.mjs --routeType=static-bearer",
        "test:remote:oauth": "node tests/manual/3-remote-test.mjs --routeType=oauth",
        "start:mcp": "node tests/manual/0-reference-implementation-mcp.mjs",
        "start:flowmcp": "node tests/manual/1-reference-implementation-flowmcp.mjs",
        "inspector": "mcp-inspector"
    },
    "keywords": [
        "oauth",
        "oauth2.1",
        "mcp",
        "model-context-protocol",
        "auth0",
        "middleware",
        "authentication",
        "authorization",
        "bearer-token"
    ],
    "author": "FlowMCP",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/flowmcp/oauth-middleware.git"
    },
    "dependencies": {
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "jwks-client": "^2.0.5"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@modelcontextprotocol/inspector": "^0.16.7",
        "flowmcpServers": "github:flowmcp/flowMCP-servers#e5b13742c264ccb170077d2c9b0616da974a63b6",
        "jest": "^29.7.0",
        "puppeteer": "^24.20.0",
        "schemaimporter": "github:flowmcp/flowMCP-schemas#3969e3b2ddae3d5d3d1c8bb8d4131b00d854af4d",
        "supertest": "^7.1.4"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "testMatch": [
            "**/tests/unit/**/*.test.js",
            "**/tests/integration/**/*.test.js",
            "**/tests/performance/**/*.test.js"
        ]
    }
}
